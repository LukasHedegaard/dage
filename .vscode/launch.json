    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File (Integrated Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Training on Digits dataset",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/run.py",
            "console": "integratedTerminal",
            "args" : [
                "--method", "tune_source",
                "--architecture", "single_stream",
                "--source", "mnist",
                "--target", "usps",
                "--num_source_samples_per_class", "200",
                "--model_base", "conv2",
                "--dense_size", "120",
                "--embed_size", "84",
                "--epochs", "1",
                "--batch_size", "64",
                "--learning_rate", "0.0001",
                "--dropout", "0.5",
                "--batch_norm", "0",
                "--augment", "1",
                "--resize_mode", "min",
                "--standardize_input", "0"
            ]
        },
        {
            "name": "Python: Domain Adaptation on Digits dataset",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/run.py",
            "console": "integratedTerminal",
            "args" : [
                "--method", "dsne",
                "--architecture", "two_stream_pair_embeds",
                "--source", "mnist",
                "--target", "usps",
                "--model_base", "conv2",
                "--dense_size", "120",
                "--embed_size", "84",
                "--epochs", "30",
                "--batch_size", "256",
                "--learning_rate", "0.01",
                "--num_source_samples_per_class", "200",
                "--num_target_samples_per_class", "3",
                "--num_val_samples_per_class", "10",
                "--shuffle_buffer_size", "5000",
                "--dropout", "0.5",
                "--batch_norm", "0",
            ]
        },
        {
            "name": "Python: Domain Adaptation on Office dataset",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/run.py",
            "console": "integratedTerminal",
            "args" : [
                "--method", "ccsa",
                "--architecture", "two_stream_pair_embeds",
                "--source", "amazon",
                "--target", "webcam",
                "--model_base", "vgg16",
            ]
        },
    ]
}